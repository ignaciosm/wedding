<!-- Custom CSS -->
<%= stylesheet_link_tag "pages" %>

<p id="notice"><%= notice %></p>

<h1>Events</h1>

  <tbody>
    <% @events.order(:id).each do |event| %>
   <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1"> 
      <div class="post">
        <h2 class="title"><%= event.event_name %></h2>
        <h3><%= event.event_date %></h3>, <h3><%= event.event_time %></h3>
        <h3><%= event.event_location %></h3>
        <h3 class="content"><%= event.event_content %></h3>
      </div>
   </div>   
    <% end %>
  </tbody>

<br>

